<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/textEmail"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        tools:visibility="visible" />
    <EditText
        android:id="@+id/email2"
        android:layout_below="@id/email1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/show_text"
        android:inputType="textEmailAddress"
        android:autofillHints="your email"
        android:labelFor="@id/email2"/>

    <TextView
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/email2"
        android:text="@string/textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/password1"
        android:text="@string/show_password"
        android:autofillHints="type password here"
        android:inputType="textPassword"
        android:labelFor="@id/password2"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/password2"
        android:text="@string/ButtonText" />


</RelativeLayout>